<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fgrToolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToolbarFragment">

   <EditText
       android:id="@+id/edtTexto"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="16dp"
       android:ems="10"
       android:inputType="text" />

    <SeekBar
        android:id="@+id/skbFormatarTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edtTexto"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/skbFormatarTexto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Alterar tamanho do Texto" />

</RelativeLayout>